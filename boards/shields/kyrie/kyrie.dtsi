#include <dt-bindings/zmk/matrix_transform.h>
#include "nicenanodef.h"

/ {
	chosen {
		zmk,kscan = &kscan0;
		zmk,matrix_transform = &default_transform;
	};
	
	default_transform: matrix_transform {
		compatible = "zmk,matrix_transform";
		columns = <14>;
		rows = <4>;
		
		map = <
			RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)						RC(0,8) RC(0,9) RC(0,10) RC(0,11) RC(0,12) RC(0,13)
			RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)						RC(1,8) RC(1,9) RC(1,10) RC(1,11) RC(1,12) RC(1,13)
			RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6)		RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11) RC(2,12) RC(2,13)
									RC(3,3) RC(3,4) RC(3,5) RC(3,6)		RC(3,7) RC(3,8) RC(3,9) RC(3,10)
		>;
	};
	
	kscan0: kscan {
		compatible = "zmk,kscan-gpio-matrix";
		diode-direction = "col2row";
		wakeup-source;
		
		row-gpios = <&pro_micro 031 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
					<&pro_micro 029 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
					<&pro_micro 002 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
					<&pro_micro 115 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
	};
};